{
  "compilerOptions": {
    "allowJs": true,
    "noEmit": true,
    "target": "ES2020",
    "module": "commonjs",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "skipLibCheck": true
  },

  "exclude": [
    "node_modules",
    "**/dist",
    "reports",
    "coverage",
    "**/iconfont.js",
    "**/.ref*",
    "**/create-factor-app/*"
  ]
}
