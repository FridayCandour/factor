{
  "name": "@factor/wrapper",
  "author": "Fiction.com <factor@fiction.com> (https://www.fiction.com)",
  "version": "1.5.7",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fiction-com/factor.git"
  },
  "workspaces": [
    "@apps/*",
    "@examples/*",
    "@plugins/*",
    "@themes/*",
    "@examples/*",
    "@factor/*",
    "@demo/*",
    "**/fixtures/*",
    "test/builds/*",
    "test/modules/*"
  ],
  "private": true,
  "license": "MIT",
  "scripts": {
    "clean-logs": "find . -name '*.log' -delete",
    "heroku-postbuild": "node ./@apps/heroku/build-heroku.js",
    "test-watch": "yarn jest @factor/**/test/unit --watch",
    "test-all": "yarn test-fixtures && yarn test-unit",
    "test-lint": "yarn test-eslint && yarn test-types",
    "test-eslint": "eslint --ext .ts,.js,.vue,.json .",
    "test-unit": "jest @factor/**/test/unit --forceExit --detectOpenHandles",
    "test-builds": "jest test/builds --forceExit",
    "test-staging": "jest test/staging --forceExit",
    "test-integration": "jest test/integration --forceExit",
    "test-types": "tsc --skipLibCheck"
  },
  "gitHooks": {
    "pre-push": "git pull && yarn test-lint && yarn test-unit",
    "commit-msg": "ts-node scripts/verify-commit.ts"
  },
  "dependencies": {
    "consola": "^2.10.1",
    "execa": "^4.0.0",
    "exit": "^0.1.2",
    "jest": "^26.0.0",
    "lerna": "^3.13.0",
    "ts-jest": "^26.0.0",
    "typescript": "^4.0.0",
    "vue": "^2.6.10"
  },
  "devDependencies": {
    "@types/jest": "^26.0.0",
    "@types/node": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.4.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-loader": "^4.0.0",
    "eslint-plugin-html": "^6.0.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jest": "^24.0.0",
    "eslint-plugin-json": "^2.0.1",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-unicorn": "^23.0.0",
    "eslint-plugin-vue": "^7.0.0",
    "prettier": "^2.0.4",
    "prettier-eslint": "^11.0.0",
    "yorkie": "^2.0.0"
  }
}
